<h1>Advansed search</h1>

<%= form_for @search, html: {class: "pure-form"} do |s| %>

<div class="field">
  <%= s.label :keywords %><br/>
  <%= s.text_field :keywords %>
</div>

<div class="field">
  <%= s.label :category %><br/>
  <%= s.select :category, options_for_select(@caregories), :include_blank => true %>
</div>

<div class="field">
  <p><%= s.label :min_price, "Min price" %> - <%= s.text_field :min_price, size: 10 %></p>
  <p><%= s.label :max_price, "Max price" %> - <%= s.text_field :max_price, size: 10 %></p>
</div>

<div class="field">
  <p><%= s.label :isbn, "ISBN" %> - <%= s.text_field :isbn, size: 10 %></p>
</div>

<div class="actions"><%= s.submit "Search", class: "" %></div>

<% end %>